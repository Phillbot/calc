{
  "compilerOptions": {
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "ES6",
    "jsx": "react",
    "noImplicitOverride": true,
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es6", "dom"],
    "paths": {
      "@common/*": ["src/common/*"],
      "@app/*": ["src/app/*"]
    }
  },
  "include": ["./src/**/*", "declaration.d.ts"],
  "exclude": ["node_modules"]
}
